+    #[error("Command unknown")]
+    CommandUnknownError,
+    #[error("SQL error")]
+    SqlError(rusqlite::Error),
+    #[error("Config error")]
+    ConfigError(config::ConfigError),
+    #[error("Data directory does not exist")]
+    DatabaseDirError,
